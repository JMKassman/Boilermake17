from app import app
from flask import render_template

@app.route('/')
@app.route('/index')
def index():
    user = {'nickname': 'Fred'}
    posts = [
            {
                'author': {'nickname':'John'},
                'body':'sadfkas;djflsadf'
            },
            {
                'author': {'nickname':'Alice'},        
                'body':'fdsafhsalkjdf'
            }
        ]
    return render_template('index.html', title='Home', user=user, posts=posts)
